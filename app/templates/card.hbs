<!--{{this}}-->
{{#offcanvas this}}
<div class="panel panel-default col-xs-10 col-xs-offset-1">
    <h3>卡号：<span class="text-danger">{{detail.card_num}}</span></h3>
    <h3>当前余额：<span class="text-danger">{{detail.balance}}</span></h3>
    <table class="table table-striped">
        <caption>消费记录</caption>
        <thead>
            <tr>
                <th>时间</th>
                <th>地点</th>
                <th>类型</th>
                <th>消费</th>
                <th>余额</th>
            </tr>
        </thead>
        <tbody>
            {{#each detail.record}} {{#each this}}
            <tr>
                <td>{{DATE}}</td>
                <td>{{WINNAME}}</td>
                <td>{{CONSUMETYPE}}</td>
                <td>{{TRANSACTMONEY}}</td>
                <td>{{CURRENTDBMONEY}}</td>
            </tr>
            {{/each}} {{/each}}

        </tbody>
    </table>
</div>
{{/offcanvas}}
