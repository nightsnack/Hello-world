<!--{{this}}-->
{{#offcanvas this}}

<div class="raw">
    <div class="small">
        <button class="btn-ring">
            <div style="font-size:20px;">平均绩点：</div>
            <div style="color:brown;">{{detail.gpa}}</div>
        </button>
    </div>
    <ul class="accordion" data-accordion>
        {{#each detail.info}}
        <li class="accordion-navigation">
            <a class="text-center" href="#index{{@index}}">{{schoolYear}}学年 第{{term}}学期</a>
            <div id="index{{@index}}" {{#if @index}} class="content" {{else}} class="content active" {{/if}}>
                <table class="small-12 columns">
                    <thead>
                        <tr>
                            <th>课程代码</th>
                            <th>课程名称</th>
                            <th>学分</th>
                            <th>绩点</th>
                            <th>成绩</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each courses}}
                        <tr>
                            <td>{{课程代码}}</td>
                            <td>{{课程名称}}</td>
                            <td>{{学分}}</td>
                            <td>{{绩点}}</td>
                            <td>{{成绩}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </li>
        {{/each}}
    </ul>
</div>
{{/offcanvas}}
